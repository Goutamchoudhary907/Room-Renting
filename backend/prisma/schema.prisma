generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id   Int @id @default(autoincrement())
  firstName  String
  lastName    String
  email String   @unique
  password  String
  createdAt   DateTime @default(now())
  reset     String?
  Properties Property[]
  @@map("user")         // name the table user
  
}

model Property{
  id   Int @id @default(autoincrement())
  title           String
  description     String
  images          Image[]   @relation("PropertyImages")
  bedrooms        Int
  bathrooms       Int
  rentalType      String
  pricePerNight   Int?
  pricePerMonth   Int?
  depositAmount   Int?
  address         String
  latitude        Decimal?  
  longitude       Decimal?
  amenities       String[]
  availability    Json?
  maxGuests       Int?
  hostId          Int
  host            User            @relation(fields: [hostId], references: [id])
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  @@map("properties")
}

model Image{
  id              Int  @id @default(autoincrement())
  url             String
  propertyId      Int
  property   Property @relation("PropertyImages", fields: [propertyId], references: [id])
  @@map("images")
}